/*---------- radar start ----------*/

.radar {
  width: 100%;
  height: 330px;
  position: relative;
}

.circle_end {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 240px;
  height: 240px;
  box-sizing: border-box;
  border-radius: 50%;
  border: 4px solid rgba(255, 255, 255, 0.8); 
}

.circle {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 240px;
  height: 240px;
  border-radius: 50%;
  /*border:32rpx solid rgba(48, 188, 243, 0.5);*/
}

.gradient_circle {
  position: absolute;
  top: 0;
  left: 0;
}

.scan {
  width: 120px;
  height: 120px;
  background: linear-gradient(0deg, rgba(40, 168, 252, 0.0), rgba(255, 255, 255, 0.45));
  border-radius: 100% 0 0 0;
  z-index: 999;
  position: relative;
}

.gradient_dot {
  position: absolute;
  top: -14px;
  right: -14px;
}

.cursor {
  width: 2px;
  height: 100%;
  background: linear-gradient(0deg, rgba(40, 168, 252, 0.0), rgba(255, 255, 255, 0.45));
  position: absolute;
  top: 0;
  right: 0;
}

.radar_score {
  margin-top: -40px;
  margin-left: -90px;
  width: 180px;
  height: 80px;
  text-align: center;
  line-height: 80px;
  font-size: 60px;
  color: #fff;
  position: absolute;
  top: 20%;
  left: 50%;
  z-index: 1000;
}

.radar_score_title {
  display: inline-block;
  height: 15px;
  line-height: 15px;
  font-size: 15px;
}

.radar_score_score {
  height: 100px;
  line-height: 100px;
  font-size: 80px;
}

.radar_score_percent {
  height: 20px;
  line-height: 20px;
  font-size: 12px;
}

.radar_score_line {
  height: 2px;
  width:100%;
  border-bottom:2px solid rgba(255, 255, 255, 0.5);
}

.radar_score_last {
  margin-top:10px;
  height: 20px;
  line-height: 20px;
  font-size: 15px;
}

/*---------- radar end ----------*/